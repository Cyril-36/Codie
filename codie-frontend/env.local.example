# Codie Frontend Environment Configuration
# Copy this file to .env.local and customize as needed

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Codie
NEXT_PUBLIC_APP_VERSION=0.1.0

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# GitHub OAuth (for development)
GITHUB_ID=your-github-client-id-here
GITHUB_SECRET=your-github-client-secret-here

# External Services
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
