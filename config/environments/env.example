# Codie Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Codie
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-here-change-in-production
APP_JWT_SECRET=your-jwt-secret-key-here-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development)
DATABASE_URL=sqlite:///./codie_dev.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/codie_db
POSTGRES_DB=codie_dev
POSTGRES_USER=codie_user
POSTGRES_PASSWORD=codie_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:5173
FRONTEND_PORT=5173
FRONTEND_API_URL=http://localhost:8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_BCRYPT_ROUNDS=12
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION=3600
SECURITY_JWT_REFRESH_EXPIRATION=86400
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_GRAFANA_PORT=3000
MONITORING_GRAFANA_PASSWORD=admin
MONITORING_GRAFANA_URL=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/codie.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@codie.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# GitHub API
GITHUB_API_TOKEN=your-github-token
GITHUB_API_URL=https://api.github.com

# Security APIs
NVD_API_KEY=your-nvd-api-key
OSV_API_URL=https://api.osv.dev
GHSA_API_URL=https://api.github.com/graphql

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
PERFORMANCE_WORKER_PROCESSES=4
PERFORMANCE_MAX_CONNECTIONS=1000
PERFORMANCE_TIMEOUT=30
PERFORMANCE_KEEPALIVE=5

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# MailHog (Development)
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025

# Adminer (Database Management)
ADMINER_PORT=8080

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TESTING_ENABLED=true
TESTING_DATABASE_URL=sqlite:///./test.db
TESTING_COVERAGE_THRESHOLD=80
TESTING_PARALLEL_WORKERS=4

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_NAMESPACE=codie
DEPLOYMENT_REPLICAS=1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_DARK_MODE=true
FEATURE_ANIMATIONS=true
FEATURE_ACCESSIBILITY=true
FEATURE_MONITORING=true
FEATURE_SECURITY_SCANNING=true
FEATURE_CODE_ANALYSIS=true
FEATURE_PERFORMANCE_TESTING=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#codie-alerts

# Discord Integration
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_CHANNEL_ID=your-channel-id

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
BACKUP_COMPRESSION=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_ENABLED=true
QUEUE_BROKER=redis
QUEUE_WORKERS=2
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60
