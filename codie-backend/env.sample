# Codie Backend Environment Configuration
# Copy this file to .env and customize as needed

# Application Settings
APP_NAME=codie-backend
APP_VERSION=0.1.0
DEBUG=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/codie.db
POSTGRES_DSN=postgresql://user:password@localhost:5432/codie

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# External Services
OPENAI_API_KEY=your-openai-api-key-here
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Monitoring
ENABLE_POSTGRES_PROBE=false
ENABLE_REDIS_PROBE=false
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
